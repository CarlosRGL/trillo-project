root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.html]
indent_size = 4

[*.php]
indent_size = 4

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.css]
indent_style = ignore
insert_final_newline = ignore


